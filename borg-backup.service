
[Unit]
Description=Borg Backup
[Service]
Type=oneshot
Environment="REPO=borg@192.168.56.10:/var/backup/Otus"
Environment="BACKUP_TARGET=/etc"
ExecStart=/bin/borg create --stats --list \
    ${REPO}::etc-{now:%%Y-%%m-%%d_%%H:%%M:%%S} ${BACKUP_TARGET}
ExecStart=/bin/borg check ${REPO}
ExecStart=/bin/borg prune \
    --keep-daily  90      \
    --keep-monthly 12     \
    --keep-yearly  1       \
    ${REPO}



