frr version 7.5.1
frr defaults traditional
hostname {{ ansible_hostname }}
log syslog informational
no ipv6 forwarding
service integrated-vtysh-configi

interface {{ ansible_eth1.device }}
 description r1-r2
 ip address {{ 'ansible_eth1.address'/'ansible_eth1.address.prefix'}}
 ip ospf mtu-ignore
 !ip ospf cost 1000
 ip ospf hello-interval 10
 ip ospf dead-interval 30

interface {{ ansible_eth2.device }
 description r1-r3
 ip address {{ 'ansible_eth2.address'/'ansible_eth2.prefix' }}
 ip ospf mtu-ignore
 !ip ospf cost 45
 ip ospf hello-interval 10
 ip ospf dead-interval 30

 
interface {{ ansible_eth3.device }}
 description net1
 ip address {{ ansible_eth3.address'/'ansible_eth3.prefix' }}
 ip ospf mtu-ignore
 !ip ospf cost 45
 ip ospf hello-interval 10
 ip ospf dead-interval 30


router ospf
 
 network {{ 'ansible_eth1.network'/'ansible_eth1.prefix' }} area 0
 network  {{ 'ansible_eth2.network'/'ansible_eth2.prefix' }}  area 0
 network  {{ 'ansible_eth3.network'/'ansible_eth3.prefix' }}  area 0

 neighbor 10.0.10.2
 neighbor 10.0.12.2

log file /var/log/frr/frr.log
default-information originate always

